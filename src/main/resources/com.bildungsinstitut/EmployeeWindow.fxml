        </columns>
      </TableView>

      <TextField fx:id="txtFullName" layoutX="28.0" layoutY="49.0" />
      <TextField fx:id="txtEmail" layoutX="28.0" layoutY="149.0" />
      <TextField fx:id="txtAge" layoutX="28.0" layoutY="99.0" />
      <TextField fx:id="txtPosition" layoutX="28.0" layoutY="200.0" />

       <Label layoutX="222.0" layoutY="14.0" text="Employee Management" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
