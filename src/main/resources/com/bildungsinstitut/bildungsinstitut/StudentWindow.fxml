       <Button fx:id="btnRemove" layoutX="57.0" layoutY="336.0" mnemonicParsing="false" onAction="#removeStudent" prefHeight="25.0" prefWidth="91.0" style="-fx-background-color: #74BFcf; -fx-font-weight: bold; -fx-font-size: 12px;" text="Remove" />
       <Button fx:id="btnUpdate" layoutX="57.0" layoutY="299.0" mnemonicParsing="false" onAction="#updateStudent" prefHeight="25.0" prefWidth="91.0" style="-fx-background-color: #74BFcf; -fx-font-weight: bold; -fx-font-size: 12px;" text="Update" />

   </children>
</AnchorPane>
